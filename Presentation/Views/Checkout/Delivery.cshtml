@model PizzaStore.Domain.Entities.Customer
@{
	ViewData["Title"] = "Delivery";
}

@using (Html.BeginForm())
{
	@Html.ValidationSummary(true)
	<fieldset>

		<div class="editor-field">
			<p>
				@Html.HiddenFor(model => model.Id)
			</p>
		</div>
		<div class="editor-label">
			Input the address for Delivery
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.Address, new { required = "required" })
			@Html.ValidationMessageFor(model => model.Address)
		</div>
	</fieldset>

	<br />
	<input type="submit" value="Add Address" class="btn btn-outline-primary" />

}