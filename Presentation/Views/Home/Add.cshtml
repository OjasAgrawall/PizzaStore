@model PizzaStore.Domain.Entities.OrderDetail;
@{
    ViewData["Title"] = "Wow";
}




@using (Html.BeginForm())
{
    <fieldset>
        <legend>@Model.Product.Name</legend>
        <p>@Model.Product.Descriptions</p>

		<div class="editor-field">
			<p>
				Product ID:
				@Html.DisplayFor(model => model.Product.Id)
				@Html.HiddenFor(model => model.Product.Id)
				@Html.ValidationMessageFor(model => model.Product.Id)
			</p>
		</div>

		<div class="editor-label">
			@Html.Label("Select any Quantity")
		</div>
		<div class="editor-field">
			@Html.EditorFor(Model => Model.Quantity)
			@if (ViewBag.QuantityError == "true"){
				<a style="color: red">
					@Html.ValidationMessageFor(Model => Model.Quantity, "The quantity must be greater than 0")
				</a>
			}
			
		</div>
		

		<br />
		<input type="submit" value="Add to Cart" class="btn btn-primary" />
		<a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </fieldset>
}
